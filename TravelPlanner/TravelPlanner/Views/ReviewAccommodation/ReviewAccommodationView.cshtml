@model TravelPlanner.Models.AccommodationReviewViewModel
@{
    ViewBag.Title = "Review Accommodation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <title>TravelPlanner - Home</title>
    <link rel="stylesheet" type="text/css" href="~/Reviews.css">
</head>

<br />
<br />



<h2>Review Accommodation</h2>
<h3>@Model.AccommodationName</h3>

<form action="@Url.Action("LeaveReview", "ReviewAccommodation")" method="post">
    @Html.HiddenFor(model => model.AccommodationId)
    @Html.HiddenFor(model => model.AccommodationName)

    <div class="form-group">
        @Html.LabelFor(model => model.Rating)
        @Html.DropDownListFor(model => model.Rating, new List<SelectListItem>
        {
            new SelectListItem { Text = "1", Value = "1" },
            new SelectListItem { Text = "2", Value = "2" },
            new SelectListItem { Text = "3", Value = "3" },
            new SelectListItem { Text = "4", Value = "4" },
            new SelectListItem { Text = "5", Value = "5" }
        }, "Select Rating", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Comment)
        @Html.TextBoxFor(model => model.Comment, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>

